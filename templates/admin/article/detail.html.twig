{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Aperçu : {{ entity.instance.title }}{% endblock %}

{% block main %}
    {# Récupération des variables #}
    {% set article = entity.instance %}
    {% set theme = article.theme %}

    <div class="article-preview p-4 rounded shadow-sm">
        
        {# STYLE SPÉCIFIQUE À L'ADMIN (Pour avoir les couleurs) #}
        <style>
            .article-preview {
                --theme-title-color: {{ theme ? theme.titleColor : '#000000' }}; /* Default to black */
                --theme-text-color: {{ theme ? theme.textColor : '#333333' }}; /* Default dark grey */
                --theme-font: {{ theme ? theme.fontFamily|raw : 'system-ui' }};
                
                background-color: #ffffff; /* Static white background for admin preview */
                font-family: var(--theme-font);
                color: var(--theme-text-color);
            }
            .article-preview h1, .article-preview h2 { color: var(--theme-title-color); }
            .preview-viz { border-top: 4px solid var(--theme-title-color); } /* Use titleColor for border */
            .image-small { max-height: 200px; }
            .image-medium { max-height: 400px; }
            .image-large { max-height: 600px; }
        </style>

        {# HEADER #}
        <div class="text-center mb-5">
            <h1 class="fw-bold">{{ article.title }}</h1>
            <p class="text-muted">Auteur : {{ article.author.pseudo }} | Thème : {{ theme ? theme.name : 'Aucun' }}</p>
        </div>

        {# CONTENU #}
        <div class="row justify-content-center">
            <div class="col-lg-10">
                {% for block in article.blocks %}
                    <div class="mb-4">
                        {% if block.type == 'text' %}
                            <div>{{ block.content|nl2br }}</div>
                        {% elseif block.type == constant('App\\Entity\\Block::BLOCK_TYPE_CHART') %}
                            {% if block.media %}
                                {{ render(controller('App\\Controller\\GraphController::embedChart', {mediaId: block.media.id})) }}
                            {% else %}
                                <p class="text-danger">Erreur: Le bloc graphique (CSV) ne contient pas de média associé.</p>
                            {% endif %}
                        {% elseif block.type == 'image' and block.media %}
                            <div class="text-center my-4">
                                <img src="{{ asset('uploads/media/' ~ block.media.filename) }}" 
                                     class="img-fluid rounded shadow image-{{ theme.imageSize|default('medium') }}" 
                                     alt="{{ block.media.altText|default('Image de l\'article') }}">
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>



        {# BOUTONS D'ACTION #}
        <div class="text-center mt-5">
            <a href="{{ ea_url().setAction('index') }}" class="btn btn-secondary">Retour liste</a>
            <a href="{{ ea_url().setAction('edit').setEntityId(article.id) }}" class="btn btn-primary">✏️ Modifier cet article</a>
        </div>

        {# FORMULAIRE D'AJOUT D'AVIS (ADMIN) #}
        <div class="mt-5 p-4 bg-light rounded border shadow-sm text-start">
            <h4 class="mb-3">➕ Ajouter un avis manuellement</h4>
            {{ form_start(reviewForm, {'action': path('admin_review_add', {'article': article.id})}) }}
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(reviewForm.pseudo) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(reviewForm.rating) }}
                    </div>
                </div>
                <div class="mt-3 text-end">
                    {{ form_row(reviewForm.submit, {'label': 'Enregistrer l\'avis', 'attr': {'class': 'btn btn-success'}}) }}
                </div>
            {{ form_end(reviewForm) }}
        </div>

        {# LISTE DES AVIS (Admin View) #}
        <div class="mt-5 pt-4 border-top">
            <h3 class="mb-4">Avis des lecteurs ({{ article.ratings|length }})</h3>
            <div class="row">
                {% for rating in article.ratings %}
                    <div class="col-md-6 mb-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <strong>{{ rating.pseudo }}</strong>
                                    <span class="text-warning">
                                        {% for i in 1..5 %}{% if i <= rating.rating %}★{% else %}☆{% endif %}{% endfor %}
                                    </span>
                                </div>
                                <small class="text-muted">{{ rating.createdAt|date('d/m/Y H:i') }}</small>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <p class="text-muted fst-italic">Aucun avis pour le moment.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {# Scripts JS (Nécessaire aussi ici pour voir les graphes) #}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // ... (Copie le même script JS que dans le fichier précédent ici) ...
        document.addEventListener('DOMContentLoaded', function() {
            const canvases = document.querySelectorAll('.data-viz-canvas');
            canvases.forEach(canvas => {
                let config;
                try { config = JSON.parse(canvas.dataset.config); } catch (e) { return; }
                if (!config || !config.media_id) return;
                fetch(`/api/media/${config.media_id}/data`)
                    .then(res => res.json())
                    .then(data => {
                        const labels = data.map(row => row[config.axe_x]);
                        const values = data.map(row => row[config.axe_y]);
                        new Chart(canvas, {
                            type: config.type,
                            data: {
                                labels: labels,
                                datasets: [{
                                    label: config.titre || config.axe_y,
                                    data: values,
                                    backgroundColor: config.couleur || '#36a2eb',
                                    borderColor: config.couleur || '#36a2eb',
                                    borderWidth: 1
                                }]
                            },
                            options: { responsive: true, maintainAspectRatio: false }
                        });
                    });
            });
        });
    </script>
{% endblock %}
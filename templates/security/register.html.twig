{% extends "base.html.twig" %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <!-- Affichage des messages flash -->
            {% for type, messages in app.flashes %}
                {% set alertClass = type == 'error' ? 'alert-danger' : 'alert-success' %}
                {% for message in messages %}
                    <div class="alert {{ alertClass }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="card">
                <div class="card-body">
                    <h1 class="card-title mb-4">Créer un compte</h1>

                    {% if registrationForm.vars.errors|length > 0 %}
                        <div class="alert alert-danger">
                            {{ form_errors(registrationForm) }}
                        </div>
                    {% endif %}

                    {{ form_start(registrationForm) }}
                        <div class="mb-3">
                            {{ form_label(registrationForm.email) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            {% if registrationForm.email.vars.errors|length > 0 %}
                                <div class="alert alert-danger mt-2">
                                    {{ form_errors(registrationForm.email) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.pseudo) }}
                            {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                            {% if registrationForm.pseudo.vars.errors|length > 0 %}
                                <div class="alert alert-danger mt-2">
                                    {{ form_errors(registrationForm.pseudo) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.plainPassword) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                                <div class="alert alert-danger mt-2">
                                    {{ form_errors(registrationForm.plainPassword) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-3 form-check">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            {% if registrationForm.agreeTerms.vars.errors|length > 0 %}
                                <div class="alert alert-danger mt-2">
                                    {{ form_errors(registrationForm.agreeTerms) }}
                                </div>
                            {% endif %}
                        </div>

                        <button type="submit" class="btn btn-primary w-100">S'inscrire</button>
                    {{ form_end(registrationForm) }}

                    <p class="text-center mt-3">
                        Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
